set runtimepath=/Users/emoosx/.pentadactyl
set editor='/usr/local/bin/mvim -f +<line> <file>'
set followhints=1
set showtabline=multitab
set showstatuslinks=command
set guioptions+=s
set titlestring="Kaung Htet Zaw"
colorscheme solarized-dark

" Keep away from pressing shift
nmap -builtin ; :

map , <Leader>

" toggle {{{
map -ex <Leader> tt :set showtabline,never
" }}}

nmap -builtin j 5j
nmap -builtin k 5k
nmap -builtin <S-j> gT
nmap -builtin <S-k> gt

