# home
export HOME="/Users/$(whoami)"

# MPI
export MPICC="/usr/local/bin/mpicc"
export MPIRUN="/usr/local/bin/mpirun"

# misc
export EDITOR="mvim -f"
export ALTERNATE_EDITOR=""
export GREP_OPTIONS="--color=auto"

# python
export PYTHONPATH=/usr/local/bin/python
export PIP_DOWNLOAD_CACHE="$HOME/.pip/cache"
export WORKON_HOME="$HOME/.virtualenvs"
export VIRTUALENVWRAPPER_PYTHON="/usr/local/bin/python"
source $(brew --prefix)/bin/virtualenvwrapper.sh

# android
export ANDROID_HOME=/usr/local/opt/android-sdk

# homebrew-cask
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# nvm
source $(brew --prefix nvm)/nvm.sh
export NVM_DIR=~/.nvm

# java
export JAVA_HOME=$(/usr/libexec/java_home -v 1.7)

# go
export GOPATH=$HOME/.go

# ocaml
export CAML_LD_LIBRARY_PATH="$HOME/.opam/4.01.0/lib/stublibs"
export OPAMUTF8MSGS="1"
export PERL5LIB="$HOME/.opam/4.01.0/lib/perl5"
export OCAML_TOPLEVEL_PATH="$HOME/.opam/4.01.0/lib/toplevel"
export HOMEBREW_KEEP_INFO=1
